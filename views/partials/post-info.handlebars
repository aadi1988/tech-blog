<!--post partials-->
<article class="post">
  <div class="title">
    <h2><a href="/post/{{id}}" target="_blank">{{title}}</a></h2>
    <h4>{{post_data}}</h4>
  </div>
  <div class="meta">
    by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>